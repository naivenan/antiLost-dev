<view class="main">
  <map id="map" longitude="{{longitude}}" latitude="{{latitude}}" markers="{{markers}}" controls="{{system == 'iOS' ? null : controls}}" bindmarkertap="doMarkertap" bindcontroltap="doControltap" polyline="{{polyline}}" include-points="{{includePoints}}"
    show-location>
  </map>
  <view class="descript">
    <view class="left">
      <view class="name">{{title}}</view>
      <view class="brief-addr">{{address}}</view>
    </view>
    <view class="right">
      <image class="navigate" src="{{navigateImag}}" mode="aspectFit" bindtap="goDetail"></image>
    </view>
  </view>
</view>